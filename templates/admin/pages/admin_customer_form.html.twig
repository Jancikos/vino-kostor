{% extends "admin\\pages\\admin_customers.html.twig" %}

{% block body %}

{# buttons row #}
<div class="btn-row">
    <a href="#" class="btn" @click.prevent="customerForm.submit()">
        {% if editMode %}
        <svg xmlns="http://www.w3.org/2000/svg" height="1em"
            viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
            <path
                d="M48 96V416c0 8.8 7.2 16 16 16H384c8.8 0 16-7.2 16-16V170.5c0-4.2-1.7-8.3-4.7-11.3l33.9-33.9c12 12 18.7 28.3 18.7 45.3V416c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V96C0 60.7 28.7 32 64 32H309.5c17 0 33.3 6.7 45.3 18.7l74.5 74.5-33.9 33.9L320.8 84.7c-.3-.3-.5-.5-.8-.8V184c0 13.3-10.7 24-24 24H104c-13.3 0-24-10.7-24-24V80H64c-8.8 0-16 7.2-16 16zm80-16v80H272V80H128zm32 240a64 64 0 1 1 128 0 64 64 0 1 1 -128 0z" />
        </svg>
        Uložiť zákazníka
        {% else %}
        <svg xmlns="http://www.w3.org/2000/svg" height="1em"
            viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
            <path
                d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM232 344V280H168c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H280v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z" />
        </svg>
        Pridať zákazníka
        {% endif %}
    </a>
</div>

{# formular #}

<form action="{{ path("admin_customers_save") }}" data-redirect="{{ path('admin_customers_index') }}" id="customer-form"
    class="form-wrapper" @submit.prevent="customerForm.submit()">
    <input type="hidden" name="pk" value="{{ customerModel.pk }}" />

    <div class="sm:form-horizontal-row">
        <div class="form-row">
            <label>Meno</label>
            <input type="text" name="firstname" placeholder="Zadajte meno zákazníka" value="{{ customerModel.firstname }}">
        </div>

        <div class="form-row">
            <label>Priezvisko</label>
            <input type="text" name="lastname" placeholder="Zadajte priezvisko zákazníka" value="{{ customerModel.lastname }}">
        </div>
    </div>

    <div class="sm:form-horizontal-row">
        <div class="form-row">
            <label>Email</label>
            <input type="text" name="email" placeholder="Zadajte email zákazníka" value="{{ customerModel.email }}">
        </div>

        <div class="form-row">
            <label>Telefón</label>
            <input type="text" name="phone" placeholder="Zadajte telefónne číslo zákazníka" value="{{ customerModel.phone }}">
        </div>
    </div>

    <div class="sm:form-horizontal-row">
        <div class="form-row">
            <label>Mesto</label>
            <input type="text" name="city" placeholder="Zadajte mesto zákazníka" value="{{ customerModel.city }}">
        </div>
        
        <div class="form-row">
            <label>Adresa</label>
            <input type="text" name="address" placeholder="Zadajte adresu zákazníka" value="{{ customerModel.address }}">
        </div>
    </div>

    <div class="form-row">
        <label>Poznámka</label>
        <textarea name="note" placeholder="Zadajte poznámku zákazníka">{{ customerModel.note }}</textarea>
    </div>
    
    {# aby sa formular dal submitnut eneterom #}
    <input type="submit" hidden />
</form>
{% endblock body %}