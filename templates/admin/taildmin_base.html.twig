<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        {{ title }} | VÃ­no Kostor
    </title>
    <link rel="icon" href="favicon.ico">

    {% block stylesheets %}
    {{ encore_entry_link_tags('taildmin') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('taildmin') }}
    {% endblock %}
</head>

<body
    x-data="{ page: 'ecommerce', 'loaded': true, 'darkMode': true, 'stickyMenu': false, 'sidebarToggle': false, 'scrollTop': false, 'sidebarVisibility': true, 'centerBody': {{ centerBody ? 'true' : 'false' }} }"
    x-init="
         darkMode = JSON.parse(localStorage.getItem('darkMode'));
         $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))"
    :class="{'dark text-bodydark bg-boxdark-2': darkMode === true}">

    {# loader #}
    <div id="loader" x-show="showLoader" x-init="showloader = false"
        class="fixed left-0 top-0 z-999999 flex h-screen w-screen items-center justify-center bg-white bg-opacity-50">
        <div class="h-16 w-16 animate-spin rounded-full border-4 border-solid border-primary border-t-transparent"></div>
    </div>


    <!-- ===== Page Wrapper Start ===== -->
    <div class="flex h-screen overflow-hidden" :class="{'items-center': centerBody}">
        <!-- ===== Sidebar Area Start ===== -->
        {% if showSidebar %}
        {% include "admin\\components\\taildmin_sidebar.html.twig" %}
        {% endif %}
        <!-- ===== SideBar Area End ===== -->



        <!-- ===== Content Area Start ===== -->
        <div class="relative flex flex-1 flex-col overflow-y-auto overflow-x-hidden">
            <!-- ===== Header Start ===== -->
            {% if showHeader %}
            {% include "admin\\components\\taildmin_header.html.twig" %}
            {% endif %}
            <!-- ===== Header End ===== -->

            <!-- ===== Main Content Start ===== -->
            <main>
                <div class="mx-auto max-w-screen-2xl p-4 md:px-6 md:pb-6 2xl:px-10 2xl:pb-10 flex flex-col gap-4">
                    {# render breadcrumbs #}
                    {% include "admin\\components\\taildmin_breadcrumbs.html.twig" %}

                    {# show flash messages if any #}
                    {% include "admin\\components\\taildmin_flashes.html.twig" %}

                    {% block body %}
                    <h2 class="mb-4 text-2xl font-semibold text-gray-700 dark:text-gray-200">Dashboard</h2>
                    {% endblock body %}
                </div>
            </main>
            <!-- ===== Main Content End ===== -->
        </div>
        <!-- ===== Content Area End ===== -->
    </div>
</body>

</html>